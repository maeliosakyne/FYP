<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_height="wrap_content">

  <TextView
      android:id="@+id/videoTitle7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:shadowColor="#000000"
      android:shadowDx="5"
      android:shadowDy="5"
      android:shadowRadius="5"
      android:text="You're doing great this week, keep up the good work!"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      android:textStyle="bold" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      app:cardBackgroundColor="#474545">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/videoTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:shadowColor="#000000"
          android:shadowDx="5"
          android:shadowDy="5"
          android:shadowRadius="5"
          android:text="@string/workout_3"
          android:textAlignment="center"
          android:textColor="#FFFFFF"
          android:textSize="20sp"
          android:textStyle="bold" />

      <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
          android:id="@+id/youtubePlayer_row"
          android:layout_width="240dp"
          android:layout_height="120dp"
          android:layout_gravity="center">

      </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

      <TextView
          android:id="@+id/videoTitle6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:shadowColor="#000000"
          android:shadowDx="5"
          android:shadowDy="5"
          android:shadowRadius="5"
          android:text="Completed"
          android:textAlignment="center"
          android:textColor="#4CAF50"
          android:textSize="20sp"
          android:textStyle="bold" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>
